<% if params[:category] %>
	<h4 class="current-category">
		Category : <%= params[:category] %>	
	</h4>
<% end %>

<% if user_signed_in? %>
 	<a href="<%= new_book_path %>" 
 		 class="btn btn-block btn-primary">
 		Add a new book
 	</a>
<hr>
<% end %>

<% if @books.count > 0 %>
	
	<% @books.each do |book| %>
	 <a href="<%= show_book_path(book) %>">
	 	<%= book.title %>
	 </a>
	<% end %>

<% else %>

 <p class="text-center display-4">
 	No books found
 </p> 

<% end %>